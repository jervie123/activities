<script type="text/javascript">
function first()
{
var variant3 = Number(document.getElementById("Coffee").value);
var jervie;
if (isNaN(variant3))
{
alert("Invalid")
}
else
{
if (variant3 > 49)
jervie = variant3 - 50
{
document.getElementById("result").innerHTML = "Have a nice day :) Thankyou for coming";
document.getElementById("result1").innerHTML = jervie;
}
}
}
function second()
{
var variant2 = Number(document.getElementById("Coffee").value);
var jervie1;
if (isNaN(variant2))
{
alert("Invalid")
}
else
{
if (variant2 > 29)
jervie1 = variant2 - 30
{
document.getElementById("result").innerHTML = "Have a nice day:) Thankyou for coming";
document.getElementById("result1").innerHTML = jervie1;
}
}
}
function second()
{
var variant1 = Number(document.getElementById("Coffee").value);
