<input type="text" name="" id="Coffee">	
<p>350ML = 25.00</p><input type="button" value="**" onclick="first()">
<p>450ML = 30.00</p><input type="button" value="**" onclick="second()">
<p>750ML = 50.00</p><input type="button" value="**" onclick="third()">
<br><br><br><br>
<h1 id="result"></h1>
<h1 id="result1"></h1>	
</center>
